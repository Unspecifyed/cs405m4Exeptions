// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build SQLInjection",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${workspaceFolder}/Exceptions.cpp",
          "-o",
          "${workspaceFolder}/Exceptions",
          // "-lsqlite3",        // Link against the SQLite library
          "-I",
          "${workspaceFolder}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task for building SQLInjection with linked sqlite3 library"
      }
    ]
  }